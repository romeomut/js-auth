<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Реєстрація</h1>
        <div class="form">

            <div class="form__item">
                {{> field label='Ел. адреса' type='email' placeholder='Ваш e-mail' action='signupForm.change'
                name="email"}}
                <span name="email" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password label='Пароль' type='password' name='password' placeholder='Введіть пароль'
                action='signupForm.change'}}
                <span name="password" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-password label='Пароль ще раз' type='password' name='passwordAgain' placeholder='Введіть
                пароль'
                action='signupForm.change'}}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-select label='Роль' name='role' action='signupForm.change' placeholder='Оберіть роль'
                list=data.role}}
                <span name="role" class="form__error">Помилка</span>
            </div>

            <div class="form__item">
                {{> field-checkbox label='Ви погоджуєтеся з правилами сервіса' placeholder='Введіть
                пароль'
                action='signupForm.change' name="isConfirm"}}
                <span name="isConfirm" class="form__error">Помилка</span>
            </div>

            <button onclick="signupForm.submit()" class="button button--disabled" type="button">Зареєструватися</button>

            <span class="alert alert--disabled">Увага, помилка!</span>
        </div>

    </form>
</div>